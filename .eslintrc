{
  "rules": {
    "max-len": [
      "error",
      {
        "code": 200
      }
    ],
    "require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": false
        }
      }
    ]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "google",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "overrides": [
    {
      "files": [
        "*.js",
      ],
      "plugins": [
        "prettier"
      ],
      "extends": [
        "eslint:recommended",
      ]
    }
  ]
}